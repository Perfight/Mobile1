<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/tea"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/txt_counter"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/circle"
        android:backgroundTint="@color/oval_border"
        android:gravity="center"
        android:shape="oval"
        android:textColor="#b454ff"
        android:textSize="50sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="23dp"
        android:textColor="#001AAE"
        android:text="@string/Tea_Clicker" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#b454ff"
        android:textColor="@color/white"
        android:onClick="onClickBtnAddTea"
        android:text="@string/add_rub_on_tea" />
</LinearLayout>
